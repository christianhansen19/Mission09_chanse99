@{
}

@model BooksViewModel

<h1>The Online Bookstore</h1>

@foreach (Book x in Model.Books)
{
    <h3>@x.Title</h3>

    <ul>
        <li>Author Name: @x.Author</li>
        <li>Publisher: @x.Publisher</li>
        <li>ISBN: @x.Isbn</li>
        <li>Classification: @x.Classification</li>
        <li>Category: @x.Category</li>
        <li>Page Count: @x.PageCount</li>
        <li>Price: @x.Price</li>
    </ul>

    <br />
}

<div page-blah="@Model.PageInfo" page-action="Index"></div>